@page "/register"

<div class="main-container-register">
    <div class="main-container-register-content">
        <div class="main-container-register-left">
            <Logo Title="Register" />
        </div>
        <div class="main-container-register-right">
            <div class="container-fluid">
                <EditForm Model="@user" OnValidSubmit="@HandleValidSubmit" class="form-register">
                    <DataAnnotationsValidator />

                    <div class="form-group pb-2">
                        <label for="name">Name</label>
                        <InputText id="name" class="form-control" @bind-Value="@user.Name" />
                        <ValidationMessage For="@(() => user.Name)" />
                    </div>

                    <div class="form-group pb-2">
                        <label for="email">Email</label>
                        <InputText id="email" class="form-control" @bind-Value="@user.Email" />
                        <ValidationMessage For="@(() => user.Email)" />
                    </div>

                    <div class="form-group pb-2">
                        <label for="password">Password</label>
                        <InputText id="password" class="form-control" type="password" @bind-Value="@user.Password" />
                        <ValidationMessage For="@(() => user.Password)" />
                    </div>

                    <div class="form-group pb-2">
                        <label for="password-confirm">Confirm Password</label>
                        <InputText id="password-confirm" class="form-control" type="password" @bind-Value="@user.ConfirmPassword" />
                        <ValidationMessage For="@(() => user.ConfirmPassword)" />
                    </div>

                    <button type="submit" class="submit-button">Submit</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>


@code {
    private User user = new User();

    private void HandleValidSubmit()
    {
        // Submit the form data to the server
    }
}